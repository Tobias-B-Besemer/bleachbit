<cleaner id="adobe_reader">
  <label>Adobe Reader</label>
  <description>Document viewer</description>
  <running type="exe" os="unix">acroread</running>
  <!--
  Tobias B. Besemer:
  Seems to not be necessary on Windows!
  But if, it would be the following line...
  <running type="exe" os="windows">AcroRd32.exe</running>
  -->
  <var name="profile">
    <value search="glob" os="windows">$LocalAppData\Adobe\Acrobat\*</value>
    <value search="glob" os="linux">~/.adobe/Acrobat/*</value>
  </var>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the cache</description>
    <action command="delete" search="walk.all" path="$$profile$$\Cache\"/>
    <action command="delete" search="glob" path="$$profile$$\*.lst"/>
    <action command="delete" search="file" path="$$profile$$\IconCacheRdr.dat"/>
    <action command="delete" search="walk.files" path="$$profile$$\IconCacheRdr*.dat"/>
    <action command="delete" search="file" path="$$profile$$\UserCache.bin"/>
    <action command="delete" search="walk.files" path="$$profile$$\ToolsSearchCacheRdr\*"/>
    <action command="delete" search="walk.files" path="$LocalAppDataLow\Adobe\Acrobat\*\ConnectorIcons\*"/>
    <action command="delete" search="walk.files" path="$LocalAppDataLow\Adobe\Acrobat\*\Search\*"/>
    <action command="delete" search="walk.files" path="$AppData\Adobe\Acrobat\*\JSCache\"/>
    <action command="delete" search="walk.files" path="$AppData\Adobe\Acrobat\*\Security\CRLCache\"/>
  </option>
  <option id="mru">
    <label>Most recently used</label>
    <description>Delete the list of recently used documents</description>
    <!-- Seen on Linux: -->
    <action command="delete" search="file" path="$$profile$$/Preferences/reader_prefs"/>
    <!-- Windows: -->
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\5.0\AVGeneral\cRecentFiles"/>
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\6.0\AVGeneral\cRecentFiles"/>
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\7.0\AVGeneral\cRecentFiles"/>
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\8.0\AVGeneral\cRecentFiles"/>
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\9.0\AVGeneral\cRecentFiles"/>
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\10.0\AVGeneral\cRecentFiles"/>
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\11.0\AVGeneral\cRecentFiles"/>
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\DC\AVGeneral\cRecentFiles"/>
    <!-- Not sure if this would be necessary for Adobe Reader 5.0-11.0, too! Can maybe check this later, if necessary. Tobias. -->
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\DC\AVGeneral\cRecentFiles_old"/>
    <!-- Not sure if this would be necessary for Adobe Reader 5.0-11.0, too! Can maybe check this later, if necessary. Tobias. -->
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\DC\AVGeneral\cRecentFolders"/>
    <!-- Just to go sure, adding this for Adobe Reader 11, too. Tobias. -->
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\11.0\AVGeneral\cRecentFiles_old"/>
    <!-- Just to go sure, adding this for Adobe Reader 11, too. Tobias. -->
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\11.0\AVGeneral\cRecentFolders"/>
  </option>
  <option id="search">
    <label>Search history</label>
    <description>Delete the search history</description>
    <!--Linux:-->
    <!-- Missing ??? Can maybe check this later... Tobias. -->
    <!--Windows:-->
    <action command="delete" search="walk.files" path="$$profile$$\ToolsSearchCacheRdr\*"/>
    <action command="delete" search="walk.files" path="$LocalAppDataLow\Adobe\Acrobat\*\Search\*"/>
    <action command="winreg" path="HKCU\Software\Adobe\Acrobat Reader\DC\AVGeneral\cRecentSearch"/>
  </option>
  <option id="tmp">
    <label>Temporary files</label>
    <description>Delete the temporary files</description>
    <!--Linux:-->
    <action command="delete" search="glob" path="/dev/shm/sem.ADBE_*_$LOGNAME"/>
    <!--Windows:-->
    <action command="delete" search="walk.all" path="%Temp%\acrocef_low"/>
    <action command="delete" search="file" path="%Temp%\acrocef_low"/>
    <action command="delete" search="walk.all" path="%Temp%\acrord32_sbx"/>
    <action command="delete" search="file" path="%Temp%\acrord32_sbx"/>
    <action command="delete" search="walk.all" path="%Temp%\WebInstaller"/>
    <action command="delete" search="file" path="%Temp%\WebInstaller"/>
    <action command="delete" search="walk.files" path="%Temp%\AdobeARM*"/>
    <action command="delete" search="file" path="%Temp%\AdobeARM.log"/>
    <action command="delete" search="file" path="%windir%\Temp\AdobeARM.log"/>
    <action command="delete" search="file" path="%windir%\Temp\AdobeARM_NotLocked.log"/>
  </option>
</cleaner>
