<cleaner id="vuze">
  <label>Vuze/Azureus</label>
  <description>File transfer client</description>
  <option id="backup_files">
    <label>Backup files</label>
    <description>Delete the backup files</description>
    <action command="delete" search="glob" path="~/.azureus/active/*.bak"/>
    <action command="delete" search="glob" path="$APPDATA\Azureus\*.bak"/>
    <action command="delete" search="glob" path="$APPDATA\Azureus\active\*.bak"/>
    <action command="delete" search="glob" path="$APPDATA\Azureus\subs\*.vuze.bak"/>
    <action command="delete" search="walk.all" path="%ProgramFiles%\Vuze\backup\"/>
    <action command="delete" search="walk.all" path="%ProgramFiles%\Vuze\Vuze AzConfigBackup\"/>
  </option>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the Caches</description>
    <action command="delete" search="file" path="~/.azureus/ipfilter.cache"/>
    <action command="delete" search="file" path="$APPDATA\Azureus\ipfilter.cache"/>
    <action command="delete" search="walk.all" path="$APPDATA\Azureus\cache"/>
    
    <!--<action command="delete" search="walk.all" path="$APPDATA\Azureus\shares\cache*\"/>-->
    <!--Seems that not normal caches and shouldn't be deleted!-->
  </option>
  <option id="logs">
    <label>Logs and Stats</label>
    <description>Delete the Logs and Stats</description>
    <action command="delete" search="walk.all" path="~/.azureus/logs/"/>
    <action command="delete" search="file" path="~/.azureus/update.log"/>
    <action command="delete" search="file" path="~/.azureus/tracker.log"/>
    <action command="delete" search="walk.all" path="$APPDATA\Azureus\logs\"/>
    <action command="delete" search="glob" path="$APPDATA\Azureus\plugins\*\*.log"/>
    <action command="delete" search="glob" path="$APPDATA\Azureus\plugins\*\eventlog.txt"/>
    <action command="delete" search="walk.all" path="$APPDATA\Azureus\stats\"/>
    <action command="delete" search="glob" path="$APPDATA\Azureus\stats\*"/>
    <action command="delete" search="file" path="$APPDATA\Azureus\update.log"/>
    <action command="delete" search="file" path="$APPDATA\Azureus\tracker.log"/>
    <action command="delete" search="glob" path="%ProgramFiles%\Vuze\*.log"/>
    <action command="delete" search="walk.files" path="%ProgramFiles%\Vuze\log\"/>
    <action command="delete" search="glob" path="%ProgramFiles%\Vuze\.install4j\*.log"/>
  </option>
  <option id="tmp">
    <label>Temporary files</label>
    <description>Delete the temporary files</description>
    <action command="delete" search="walk.files" path="~/.azureus/tmp/"/>
    <action command="delete" search="walk.files" path="$APPDATA\Azureus\tmp\"/>
    <action command="delete" search="glob" path="$APPDATA\Azureus\torrents\*.tmp"/>
    <action command="delete" search="glob" path="$APPDATA\Azureus\subs\*.results.bad*"/>
    <action command="delete" search="walk.files" path="$APPDATA\Azureus\subs\temp\"/>
    <action command="delete" search="glob" path="$APPDATA\Azureus\torrents\*.tmp._az"/>
    <action command="delete" search="glob" path="$APPDATA\Azureus\torrents\*.torrent._az.saving"/>
    <action command="delete" search="walk.all" path="$APPDATA\Azureus\updates\"/>
    <action command="delete" search="walk.all" path="%LocalAppData%\Temp\AzureusInstall\"/>
    <action command="delete" search="glob" path="%LocalAppData%\Temp\AzureusInstall\"/>
    <action command="delete" search="glob" path="%LocalAppData%\Temp\core_Azureus*"/>
  </option>
</cleaner>
