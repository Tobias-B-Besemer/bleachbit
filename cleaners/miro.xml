<cleaner id="miro">
  <label>Miro</label>
  <description>Multimedia viewer</description>
  <var name="cache-profile">
    <value search="glob" os="windows">$APPDATA\Participatory Culture Foundation\Miro\Support</value>
    <value search="glob" os="linux">~/.miro</value>
  </var>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the cache</description>
    <action command="delete" search="walk.files" path="$$cache-profile$$/icon-cache/"/>
    <action command="delete" search="walk.files" path="$$cache-profile$$/mozilla/Cache/"/>
  </option>
  <option id="logs">
    <label>Logs</label>
    <description>Delete the logs</description>
    <action command="delete" search="file" path="~/.miro/miro-downloader-log"/>
    <action command="delete" search="file" path="~/.miro/miro-log"/>
    <action command="delete" search="file" path="~/.miro/miro-log.1"/>
    <action command="delete" search="file" path="$USERPROFILE\Local Settings\Temp\Miro-downloader.log"/>
    <action command="delete" search="file" path="$USERPROFILE\Local Settings\Temp\Miro.log"/>
    <action command="delete" search="file" path="$USERPROFILE\Local Settings\Temp\Miro.log.1"/>
    <action command="delete" search="file" path="$USERPROFILE\Local Settings\Temp\Miro_Download_Daemon_a.txt"/>
    <!-- Polish Windows XP Support: -->
    <action command="delete" search="file" path="$USERPROFILE\Ustawienia lokalne\Temp\Miro-downloader.log"/>
    <action command="delete" search="file" path="$USERPROFILE\Ustawienia lokalne\Temp\Miro.log"/>
    <action command="delete" search="file" path="$USERPROFILE\Ustawienia lokalne\Temp\Miro.log.1"/>
    <action command="delete" search="file" path="$USERPROFILE\Ustawienia lokalne\Temp\Miro_Download_Daemon_a.txt"/>
  </option>
</cleaner>
