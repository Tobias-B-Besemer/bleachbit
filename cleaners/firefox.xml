    @cleanerversion v2.0.0
    @os Windows, Linux, FreeBSD, OpenBSD
    @cleanerdate 2019-03-15
    @cleanerby Andrew Ziem (2018-10-01 - 2018-11-05) & luoliyan (2018-10-31) & danielk43 (2018-11-29) & Tobias B. Besemer (2019-02-12 - 2019-03-15)
    @tested ok v67.0a1, Windows 7
    @testeddate 2019-03-15
    @testedby https://github.com/Tobias-B-Besemer
    @note The cleaner is for different editions, like the normal "Mozilla Firefox" edition and e.g. the "Mozilla Firefox Developer Edition"...

-->
<cleaner id="firefox">
  <label>Firefox</label>
  <description>Web browser</description>
  <running type="exe" os="unix">firefox</running>
  <running type="exe" os="unix">firefox-bin</running>
  <running type="exe" os="windows">firefox.exe</running>
  <!--
  Just a guess! I will figure this out later! Tobias.
  <running type="exe" os="linux">firefox</running>
  -->
  <!--
  <running type="pathname">~/.mozilla/firefox/*.default/lock</running>
  
  What is, if the user have multiple profiles that he maybe have renamed ???
  Or from different versions of FF ??? (E.g. Developer Edition...)
  On Windows I have profile folders that have e.g. the following names:
  - zypzyju5.default
  - zxzu78e2.dev-edition-default (From the Developer Edition !!!)
  - uaj16i8x.Default User (Some day renamed ???)
  - 5umya027.Test (Surely renamed...)
  
  So I guess the line should be:
  <running type="pathname">~/.mozilla/firefox/*/lock</running>
  
  But as we already check if the executable is running, I prefer to remove this line...
  -->
  <var name="base">
    <value os="windows">%AppData%\Mozilla\Firefox</value>
    <value os="linux">~/.mozilla/firefox</value>
    <value os="freebsd">~/.mozilla/firefox</value>
    <value os="openbsd">~/.mozilla/firefox</value>
  </var>
  <var name="profile">
    <value search="glob" os="windows">%AppData%\Mozilla\Firefox\Profiles\*</value>
    <value search="glob" os="linux">~/.mozilla/firefox/*</value>
    <value search="glob" os="freebsd">~/.mozilla/firefox/*</value>
    <value search="glob" os="openbsd">~/.mozilla/firefox/*</value>
  </var>
  <var name="localprofile">
    <value search="glob" os="windows">%LocalAppData%\Mozilla\Firefox\Profiles\*</value>
    <!-- Unknow by other OSes, yet! Tobias B. Besemer will do Linux Part, later! -->
    <!--
    <value search="glob" os="linux">~/.mozilla/firefox/*</value>
    <value search="glob" os="freebsd">~/.mozilla/firefox/*</value>
    <value search="glob" os="openbsd">~/.mozilla/firefox/*</value>
    -->
  </var>
  <option id="backup">
    <label>Backup files</label>
    <description>Delete the backup files</description>
    <action command="delete" search="glob" path="$$profile$$/bookmarkbackups/*.json"/>
    <action command="delete" search="glob" path="$$profile$$/bookmarkbackups/*.jsonlz4"/>
    <action command="delete" search="walk.files" path="$$profile$$\sessionstore-backups\"/>
    <action command="delete" search="file" path="$$profile$$\sessionstore-backups\"/>
    <action command="delete" search="glob" path="$$profile$$/sessionstore.bak-*"/>
    <action command="delete" search="glob" path="$$profile$$\*.bak"/>
    <action command="delete" search="glob" path="$$profile$$\*.bak-*"/>
    <action command="delete" search="glob" path="$$profile$$\prefs-*.js"/>
  </option>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the cache</description>
    <!-- 
    This Linux path is whitelisted under the System - Cache cleaner, so it is not
    redundant. Also, this Linux path contains the cache2 and OfflineCache directories.
    -->
    <action command="delete" search="walk.all" path="~/.cache/mozilla/"/>
    <action command="delete" search="walk.all" path="$$localprofile$$\cache2"/>
    <action command="delete" search="walk.all" path="$$localprofile$$\jumpListCache"/>
    <action command="delete" search="walk.all" path="$$localprofile$$\OfflineCache"/>
    <action command="delete" search="walk.all" path="$$localprofile$$\startupCache"/>
    <action command="delete" search="walk.all" path="$$localprofile$$\thumbnails"/>
    <!-- This should later delete the storage cache in FF >= v62 -->
    <action command="delete" search="walk.all" path="$$profile$$\storage\default\*\cache\"/>
    <!--
    This file no longer exists in Firefox >=62
    
    Necko Predictive Network Actions
    https://wiki.mozilla.org/Privacy/Reviews/Necko
    -->
    <action command="delete" search="file" path="$$profile$$/netpredictions.sqlite"/>
  </option>
  <option id="cookies">
    <label>Cookies</label>
    <description>Delete cookies, which contain information such as web site preferences, authentication, and tracking identification</description>
    <action command="delete" search="file" path="$$profile$$/cookies.txt"/>
    <action command="delete" search="file" path="$$profile$$/cookies.sqlite"/>
    <action command="delete" search="file" path="$$profile$$/cookies.sqlite-shm"/>
    <action command="delete" search="file" path="$$profile$$/cookies.sqlite-wal"/>
  </option>
  <option id="crash_reports">
    <label>Crash reports</label>
    <description>Delete the files</description>
    <action command="delete" search="walk.all" path="$$base$$/Crash Reports/"/>
    <action command="delete" search="glob" path="$$profile$$/minidumps/*.dmp"/>
    <action command="delete" search="glob" path="$$profile$$/minidumps/*.extra"/>
    <action command="delete" search="glob" path="%LocalAppData%\CrashDumps\firefox.exe.*.dmp"/>
    <action command="delete" search="glob" path="$$profile$$\crashes\events"/>
  </option>
  <option id="dom">
    <label translators="DOM=Document Object Model">DOM Storage</label>
    <description>Delete HTML5 cookies</description>
    <action command="delete" search="file" path="$$profile$$/webappsstore.sqlite"/>
  </option>
  <option id="forms">
    <label>Form history</label>
    <description>A history of forms entered in web sites and in the Search bar</description>
    <action command="delete" search="file" path="$$profile$$/formhistory.dat"/>
    <action command="delete" search="file" path="$$profile$$/formhistory.sqlite"/>
  </option>
  <option id="passwords">
    <label>Passwords</label>
    <description>A database of usernames and passwords as well as a list of sites that should not store passwords</description>
    <warning>This option will delete your saved passwords.</warning>
    <!-- http://kb.mozillazine.org/Password_Manager -->
    <action command="delete" search="file" path="$$profile$$/signons.txt"/>
    <action command="delete" search="file" path="$$profile$$/signons2.txt"/>
    <action command="delete" search="file" path="$$profile$$/signons3.txt"/>
    <action command="delete" search="file" path="$$profile$$/signons.sqlite"/>
    <action command="delete" search="file" path="$$profile$$/logins.json"/>
  </option>
  <option id="session_restore">
    <label>Session restore</label>
    <description>Loads the initial session after the browser closes or crashes</description>
    <!--
    example names:
    sessionstore.js
    sessionstore.jsonlz4
    sessionstore.bak
    sessionstore.bak-20140715214327
    sessionstore-1.js
    upgrade.jsonlz4-20180905220717
    -->
    <action command="delete" search="glob" path="$$profile$$/sessionstore*.js*"/>
    <action command="delete" search="glob" path="$$profile$$/sessionstore.bak*"/>
    <action command="delete" search="glob" path="$$profile$$/sessionstore-backups/previous.js*"/>
    <action command="delete" search="file" path="$$profile$$/sessionstore-backups/recovery.js"/>
    <action command="delete" search="file" path="$$profile$$/sessionstore-backups/previous.bak"/>
    <action command="delete" search="glob" path="$$profile$$/sessionstore-backups/upgrade.js*-20*"/>
  </option>
  <option id="site_preferences">
    <label>Site preferences</label>
    <description>Settings for individual sites</description>
    <action command="delete" search="file" path="$$profile$$/content-prefs.sqlite"/>
  </option>
  <option id="url_history">
    <label>URL history</label>
    <description>List of visited web pages</description>
    <action command="delete" search="file" path="$$profile$$/SiteSecurityServiceState.txt"/>
    <!-- Firefox versions 1 and 2 -->
    <action command="delete" search="file" path="$$profile$$/history.dat"/>
    <action command="delete" search="file" path="$$profile$$/downloads.rdf"/>
    <!-- Firefox 3 introduced downloads.sqlite and places.sqlite -->
    <action command="delete" search="file" path="$$profile$$/downloads.sqlite"/>
    <action command="mozilla.url.history" search="file" path="$$profile$$/places.sqlite"/>
  </option>
  <option id="vacuum">
    <label>Vacuum</label>
    <description>Clean database fragmentation to reduce space and improve speed without removing any data</description>
    <action command="sqlite.vacuum" search="glob" path="$$profile$$/*.sqlite"/>
  </option>
  <option id="temp">
    <label>Temporary files</label>
    <description>Delete the temporary files</description>
    <action command="delete" search="walk.all" path="$$profile$$\storage\temporary"/>
    <action command="delete" search="glob" path="$$profile$$\hotfix.*.json"/>
    <action command="delete" search="glob" path="$$localprofile$$\*.tmp"/>
    <action command="delete" search="walk.all" path="$$localprofile$$\safebrowsing-failedupdate"/>
    <action command="delete" search="walk.all" path="%LocalAppDataLow%\Mozilla\Temp-*"/>
    <action command="delete" search="glob" path="%LocalAppDataLow%\Mozilla\Temp-*"/>
    <action command="delete" search="glob" path="%Temp%\tmpaddon-*"/>
    <action command="delete" search="glob" path="%Temp%\tmp-*.xpi"/>
    <action command="delete" search="file" path="%Temp%\moz-update-newest-backup-update.log"/>
    <action command="delete" search="file" path="%Temp%\moz-update-newest-last-update.log"/>
  </option>
  <option id="junk">
    <label>Junk files and folders</label>
    <description>Delete the junk files and folders</description>
    <action command="delete" search="glob" path="$$base$$/Crash Reports/InstallTime*"/>
    <action command="delete" search="glob" path="%LocalAppData%\Mozilla\updates"/>
    <!-- Old name of Firefox Developer Edition: -->
    <action command="delete" search="file" path="%ProgramData%\Microsoft\Windows\Start Menu\Programs\Aurora.lnk"/>
    <!-- Seems to be wrongly created by any build: -->
    <action command="delete" search="glob" path="%LocalAppData%\Mozilla\Firefox\firefox"/>
    <!--
    Lets delete some old profile files that got converted a long time ago!
    But respect (for now) the people that still use Windows XP/Vista!
    Last version of Firefox that can be used with Windows XP/Vista: Version 52.9.0 ESR
    Version 53 (first version without XP/Vista Support) got branched on: 2016-11-14
    Look: https://wiki.mozilla.org/Release_Management/Calendar
    So delete only files older then: 2016-11-14
    When BleachBit drops support for WinXP/Vista, more files can be deleted!
    -->
    <!-- No more used since at least 2016-03-19: -->
    <action command="delete" search="walk.all" path="$$localprofile$$\chrome_debugger_profile\"/>
    <action command="delete" search="glob" path="$$localprofile$$\chrome_debugger_profile"/>
    <!-- No more used since at least 2016-03-19: -->
    <action command="delete" search="file" path="$$localprofile$$\_CACHE_CLEAN_"/>
    <!-- No more used since at least 2013-03-27: -->
    <action command="delete" search="file" path="$$localprofile$$\urlclassifier.pset"/>
    <!-- No more used since at least 2016-02-17: -->
    <action command="delete" search="file" path="$$localprofile$$\urlclassifier3.sqlite"/>
    <!-- No more used since at least 2016-01-06: -->
    <action command="delete" search="walk.all" path="$$profile$$\extension-data\"/>
    <action command="delete" search="glob" path="$$profile$$\extension-data"/>
    <!-- No more used since at least 2015-11-24: -->
    <action command="delete" search="walk.all" path="$$profile$$\healthreport\"/>
    <action command="delete" search="glob" path="$$profile$$\healthreport"/>
    <!-- No more used since at least 2016-03-09: -->
    <action command="delete" search="walk.all" path="$$profile$$\jetpack\"/>
    <action command="delete" search="glob" path="$$profile$$\jetpack"/>
    <!-- No more used since at least 2014-05-02: -->
    <!-- Empty folder on demo system of Tobias B. Besemer. -->
    <action command="delete" search="glob" path="$$profile$$\metro"/>
    <!-- No more used since at least 2013-04-09: -->
    <action command="delete" search="file" path="$$profile$$\searchplugins\askcom.xml"/>
    <action command="delete" search="glob" path="$$profile$$\searchplugins"/>
    <!-- No more used since at least 2016-03-20: -->
    <action command="delete" search="file" path="$$profile$$\sessionstore-backups\previous.js"/>
    <action command="delete" search="glob" path="$$profile$$\sessionstore-backups\upgrade.js-*"/>
    <!-- No more used since at least 2018-04-06: -->
    <!-- Wait till BleachBit drops support for WinXP/Vista!
    <action command="delete" search="file" path="$$profile$$\sessionstore-backups\recovery.js"/>
    <action command="delete" search="file" path="$$profile$$\sessionstore-backups\recovery.bak"/>
    -->
    <!-- No more used since at least 2014-04-01: -->
    <action command="delete" search="walk.all" path="$$profile$$\TestPilotExperimentFiles\"/>
    <action command="delete" search="glob" path="$$profile$$\TestPilotExperimentFiles"/>
    <!-- No more used since at least 2016-03-08: -->
    <action command="delete" search="file" path="$$profile$$\cert_override.txt"/>
    <!-- No more used since at least 2018-04-06 (Replaced with cert9.db?): -->
    <!-- Lets wait a bit more...
    <action command="delete" search="file" path="$$profile$$\cert8.db"/>
    -->
    <!-- No more used since at least 2014-01-11: -->
    <action command="delete" search="file" path="$$profile$$\extensions.log"/>
    <!-- No more used since at least 2012-09-08: -->
    <action command="delete" search="file" path="$$profile$$\gtb-metrics.xml"/>
    <!-- No more used since at least 2011-06-09: -->
    <action command="delete" search="file" path="$$profile$$\gtb-metrics-config.xml"/>
    <!-- No more used since at least 2014-05-02: -->
    <action command="delete" search="file" path="$$profile$$\httpDataUsage.dat"/>
    <!-- No more used since at least 2018-04-06: -->
    <!-- Wait a bit more...
    <action command="delete" search="file" path="$$profile$$\key3.db"/>
    <action command="delete" search="file" path="$$profile$$\key4.db"/>
    -->
    <!-- No more used since at least 2014-09-05: -->
    <action command="delete" search="file" path="$$profile$$\localstore.rdf"/>
    <!-- No more used since at least 2014-02-07: -->
    <action command="delete" search="file" path="$$profile$$\marionette.log"/>
    <!-- No more used since at least 2016-03-02: -->
    <action command="delete" search="file" path="$$profile$$\mimeTypes.rdf"/>
    <!-- No more used since at least 2015-05-18: -->
    <action command="delete" search="file" path="$$profile$$\persdict.dat"/>
    <!-- No more used since at least 2013-04-02: -->
    <action command="delete" search="file" path="$$profile$$\prefs.js.new"/>
    <!-- No more used since at least 2015-11-28: -->
    <action command="delete" search="file" path="$$profile$$\search.json"/>
    <!-- No more used since at least 2015-10-29: -->
    <action command="delete" search="file" path="$$profile$$\search-metadata.json"/>
    <!-- No more used since at least 2011-06-09: -->
    <action command="delete" search="file" path="$$profile$$\secmod.db"/>
    <!-- No more used since at least 2013-03-27: -->
    <action command="delete" search="file" path="$$profile$$\sessionHistograms.dat.4little"/>
    <!-- No more used since at least 2015-07-11: -->
    <action command="delete" search="file" path="$$profile$$\signedInUserOAuthTokens.json"/>
    <!-- No more used since at least 2014-06-20: -->
    <action command="delete" search="file" path="$$profile$$\TestPilotErrorLog.log"/>
    <action command="delete" search="walk.files" path="$$profile$$\TestPilotErrorLog.log*"/>
    <!-- No more used since at least 2013-05-20: -->
    <action command="delete" search="file" path="$$profile$$\times.json"/>
    <!-- No more used since at least 2014-03-20: -->
    <action command="delete" search="file" path="$$profile$$\urlclassifierkey3.txt"/>
  </option>
</cleaner>
